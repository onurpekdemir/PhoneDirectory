@model ContactCreateViewModel


<form asp-controller="Contact" asp-action="Add">
    
    <div class="form-group">
        <label for="txtName">Name</label>
        <input id="txtName" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="txtLastName">Last Name</label>
        <input id="txtLastName" asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label for="txtFirm">Firm</label>
        <input id="txtFirm" asp-for="Firm" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}