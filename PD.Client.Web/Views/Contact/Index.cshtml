@model List<ContactQueryViewModel>


<a href="/contact/add" class="btn btn-success btn-lg btn-block"> Add New Contact</a>

<div class="pt-2"></div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Firm</th>
            <th scope="col">Details</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td >@Model[i].Name</td>
                <td >@Model[i].LastName</td>
                <td >@Model[i].Firm</td>
                <td ><a href="/contact/info/@Model[i].ID" class="btn btn-info">Contact Info</a></td>
            </tr>
        }

    </tbody>
</table>