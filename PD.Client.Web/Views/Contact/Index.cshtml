@model List<ContactQueryViewModel>


<a href="/contact/add" class="btn btn-success btn-lg btn-block"> Add New Contact</a>

<div class="pt-2"></div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Firm</th>
            <th width="15%" scope="col"></th>
            <th width="10%" scope="col"></th>
            <th width="10%" scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
        <tr>
            <td>@Model[i].Name</td>
            <td>@Model[i].LastName</td>
            <td>@Model[i].Firm</td>
            <td><a href="/contact/details/@Model[i].ID" class="btn btn-info">Contact Info</a></td>
            <td><a href="/contact/update/@Model[i].ID" class="btn btn-warning">Update</a></td>
            <td><a href="/contact/delete/@Model[i].ID" class="btn btn-danger">Delete</a></td>
        </tr>
        }

    </tbody>
</table>